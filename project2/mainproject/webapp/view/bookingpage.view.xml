<mvc:View controllerName="com.applexus.mainproject.controller.bookingpage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <VBox id="vbox1" alignItems="Center" justifyContent="Center">
    <Title id="title1" text="Booking page" level="H1" class="sapUiLargeMarginTop"/>
        <FlexBox id="flexbox1" class="login-container" alignItems="Center" justifyContent="Center">
        <VBox id="vbox2" class="sapUiSmallMargin">
            <Input id="Amount" placeholder="Amount"/> 
  <DatePicker id="DP1"
    valueFormat="dd.MM.yyyy"
  placeholder="Book From"
  />
  <DatePicker id="DP2"
    valueFormat="dd.MM.yyyy"
  placeholder="Book To"
  />
           
            <HBox id="hbox1" justifyContent="Center">
        <Button id="btn1" text="Submit" press="onSubmitPress"/>
        </HBox>
        </VBox>
        </FlexBox>
        </VBox>
    </Page>
</mvc:View>
