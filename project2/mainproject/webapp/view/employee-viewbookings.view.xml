<mvc:View controllerName="com.applexus.mainproject.controller.employee-viewbookings"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <VBox id="vbox1" alignItems="Center" justifyContent="Center">
    <Title id="title1" text="View Bookings" level="H1" class="sapUiLargeMarginTop"/>
        <Table id="_IDGenTable1"  items="{path:'requests>/booking'}" ariaLabelledBy="title">

    <columns>


        <Column id="_IDGenColumn1"  width="5rem">

            <Label id="_IDGenLabel1"  text="House/Flat No" />

        </Column>

        <Column id="_IDGenColumn2"  width="5rem">

            <Label id="_IDGenLabel2"  text="House/Flat Name" />

        </Column>

        <Column id="_IDGenColumn3"  width="5rem">

            <Label id="_IDGenLabel3"  text="Booked From" />

        </Column>

        <Column id="_IDGenColumn4"  width="5rem">

            <Label id="_IDGenLabel4"  text="Booked To" />

        </Column>
        <Column id="_IDGenColumn5"  width="5rem">

            <Label id="_IDGenLabel5"  text="Amount" />

        </Column>
       
      
        <Column id="_IDGenColumn6"  width="5rem">

            <Label id="_IDGenLabel6"  text="Action" />

        </Column>
        
        </columns>

        <items>

            <ColumnListItem id="_IDGenColumnListItem1" >

                <cells>

                    <Text id="_IDGenText1"  text="{requests>Employee id}"/>

                </cells>

                <cells>

                    <Text id="_IDGenText2"  text="{requests>Employee Name}"/>

                </cells>

                <cells>

                    <Text id="_IDGenText3"  text="{requests>Company Name}"/>

                </cells>

                <cells>

                    <Text id="_IDGenText4"  text="{requests>Booked Address}"/>

                </cells>
                <cells>

                    <Text id="_IDGenText5"  text="{requests>Owner Name}"/>

                </cells>
            
                   <cells>

                        <HBox id="cellButton">

                        <Button id="bggb1"

                        activeIcon=""

                        enabled="true"

                        icon="sap-icon://sys-cancel-2"

                        text="Cancel"

                        textDirection="Inherit"

                        type="Reject"

                        width="100%"/>
                        </HBox>

                </cells>
                
            </ColumnListItem>

        </items>

    </Table>
        </VBox>
    </Page>
</mvc:View>