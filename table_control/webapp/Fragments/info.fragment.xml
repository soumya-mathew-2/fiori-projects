<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
	<f:SimpleForm
         id="mySimpleForm"
    editable="true"
    layout="ResponsiveGridLayout"
    labelSpanL="3"
    labelSpanM="3"
    labelSpanS="12"
    emptySpanL="4"
    emptySpanM="4">
    
    <Label id="_IDGenLabel1" text="Name" />
    <Input id="_IDGenInput1" value="{fruit>name}" />
    
    <Label id="_IDGenLabel2" text="Color" />
    <Input id="_IDGenInput2" value="{fruit>color}" />
    <Label id="_IDGenLabel3"  text="Taste" />
    <Input id="_IDGenInput3" value="{fruit>taste}"/>
    <Label id="_IDGenLabel4"  text="Size" />
    <Input id="_IDGenInput4" value="{fruit>size}"/>
     <Label id="_IDGenLabel5"  text="Price" />
    <Input id="_IDGenInput5" value="{fruit>price}"/>
     <Label id="_IDGenLabel6"  text="Status" />
    <Input id="_IDGenInput6" value="{fruit>status}"/>
     <Label id="_IDGenLabel7"  text="Healthbenefits" />
    <Input id="_IDGenInput7" value="{fruit>healthbenefits}"/>
    

           
  </f:SimpleForm>
</core:FragmentDefinition>